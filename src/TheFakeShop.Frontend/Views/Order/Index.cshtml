
@{
    ViewData["Title"] = "Order Page";
}

@model IList<TheFakeShop.ShareModels.OrderHeaderViewModel>
<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Mã đơn hàng</th>
                <th scope="col">Ngày mua</th>
                <th scope="col">Tổng thành tiền</th>
                <th scope="col">Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row"><a href="~/order/@item.OrderId">@item.OrderId</a></th>
                <td>@item.CreatedAt</td>
                <td>@string.Concat(string.Format("{0:#,##0}", item.Cost), " vnđ")</td>
                @switch (item.OrderStatus)
                {
                    case "XN":
                    <td>Chờ xác nhận</td>
                        ; break;
                    case "VC":
                    <td>Đang vận chuyển</td>
                        ; break;
                    case "LH":
                    <td>Chờ lấy hàng</td>
                        ; break;
                    case "TC":
                    <td>Thành công</td>
                        ; break;
                }
            </tr>
            }
        </tbody>
    </table>
</div>
